@model Actmis.Models.tEvents

@{
    ViewBag.Title = "活動詳細";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <style>
        .detail-ca .col-8 {
            float: left;
        }

         .detail-ca .col-8 h2 {
             float: left;
             font-size: 28px;
            }

        .fixed-width .col-4 {
            float: right;
            text-align: right;
        }

        body {
            background-color: #f5f5f5;
            /*font-family: Arial, Helvetica, sans-serif, 'Microsoft JhengHei';*/
        }

        .detail-ca {
            position: relative;
            width: 1080px;
            margin: 0px auto;
        }

         .detail-ca .col-12 h3 {
             font-size: 16px;
             font-weight: 700;
            }
    </style>
}

@section scripts{

}


<div class="detail-ca col-xl-12 col-sm-12 bg-white my-4">
    <div class="row align-items-center">
        <img class="d-block w-100" src="~/images/@Model.fImg">
        <div class="col-8 pt-2">
            <h2>@Html.DisplayFor(model => model.fName)</h2>
            <p>@Html.DisplayFor(model => model.fDescription)</p>
            <dl class="row">
                <dt class="col-md-2">活動時間</dt>
                <dd class="col-md-10">@Html.DisplayFor(model => model.fDate)</dd>
                <dt class="col-md-2">活動地點</dt>
                <dd class="col-md-10">@Html.DisplayFor(model => model.fPosition)</dd>
                <dt class="col-md-2">主辦單位</dt>
                <dd class="col-md-10">@Html.DisplayFor(model => model.fHost)</dd>
                <dt class="col-md-2">活動嘉賓</dt>
                <dd class="col-md-10">@Html.DisplayFor(model => model.fPeople)</dd>
            </dl>
        </div>
        <div class="col-4 pt-5">
            <div class="card bg-light mb-3 ml-3" style="max-width: 16rem;">
                <div class="card-header">票價</div>
                <div class="card-body">
                    <h5 class="card-title">NT$@Html.DisplayFor(model => model.fPrice)元</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <button type="button" class="btn btn-outline-primary mx-1">加入收藏</button>
                    <button type="button" class="btn btn-outline-primary mx-1">立即報名</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row align-items-center py-4">
        <div class="col-12">
            <h3>活動介紹</h3>
            <hr>
        </div>
        <div class="col-10">
            <p>@Html.DisplayFor(model => model.fDes_detail)</p>
        </div>
    </div>
</div>


